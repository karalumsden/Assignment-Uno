<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <filter>
        <filter-name>LoginServletFilter</filter-name>
        <filter-class>toba.filters.LoginServletFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>LoginServletFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
    </filter-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>toba.login.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>NewCustomerServlet</servlet-name>
        <servlet-class>toba.customer.NewCustomerServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>NewCustomerServlet</servlet-name>
        <url-pattern>/newcustomer</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>toba.transaction.TransactionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PasswordReset</servlet-name>
        <servlet-class>toba.password.PasswordReset</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PasswordReset</servlet-name>
        <url-pattern>/resetpassword</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ReportsServlet</servlet-name>
        <servlet-class>toba.reports.ReportsServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ReportsServlet</servlet-name>
        <url-pattern>/admin/reports</url-pattern>
    </servlet-mapping>
    
        <servlet>
        <servlet-name>CheckPasswordServlet</servlet-name>
        <servlet-class>murach.acount.CheckPasswordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckPasswordServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    
    <error-page>
        <error-code>404</error-code>
        <location>/Error_404.jsp</location>
    </error-page>
    

    
    <!-- Define security roles -->
    <security-role>
        <description>development</description>
        <role-name>programmer</role-name>
    </security-role>

    <!-- Restrict access to all files in the /admin folder -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <!-- Authorize the secourity roles -->
        <auth-constraint>
            <role-name>programmer</role-name>
        </auth-constraint>
        <!-- Require a secure connection (DON'T NEED FOR THIS ASSIGNMENT)
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint> -->
    </security-constraint>

    <!-- Use form-based authentication -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/admin/login.html</form-login-page>
            <form-error-page>/admin/login_error.html</form-error-page>
        </form-login-config>
    </login-config>
    
    
</web-app>
